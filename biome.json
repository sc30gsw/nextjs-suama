{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": [
        "next.config.ts",
        "layout.tsx",
        "page.tsx",
        "loading.tsx",
        "error.tsx",
        "not-found.tsx",
        "unauthorized.tsx",
        "forbidden.tsx",
        "middleware.ts",
        "default.tsx",
        "./src/features/**/*/route.ts",
        "drizzle.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off",
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "include": [
        "env.ts",
        "./src/features/**/types/schemas/*.ts",
        "./src/features/**/server/fetcher.ts",
        "./src/features/**/queries/fetcher.ts",
        "*.d.ts",
        "db/schema.ts",
        "auth-schema.ts",
        "auth-client.ts",
        "./src/features/reports/weekly/components/weekly-reports-cards.tsx",
        "query-factories.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "include": ["./src/features/**/actions/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          }
        }
      }
    },
    {
      "include": ["use-safe-form.ts"],
      "linter": {
        "rules": {
          "suspicious": { "noExplicitAny": "off" }
        }
      }
    },
    {
      "include": ["./src/components/ui/intent-ui/*.tsx"],
      "linter": {
        "rules": {
          "correctness": { "noUndeclaredDependencies": "off" },
          "style": {
            "noNamespaceImport": "off",
            "noNonNullAssertion": "off",
            "useNamingConvention": "off"
          },
          "a11y": { "noSvgWithoutTitle": "off", "useSemanticElements": "off" },
          "complexity": { "noExcessiveCognitiveComplexity": "off" }
        }
      }
    },
    {
      "include": ["./src/index.ts"],
      "linter": {
        "rules": {
          "style": { "noNamespaceImport": "off" },
          "correctness": { "noUnusedVariables": "off" }
        }
      }
    },
    {
      "include": ["*.d.ts"],
      "linter": { "rules": { "correctness": { "noUnusedVariables": "off" } } }
    }
  ]
}
